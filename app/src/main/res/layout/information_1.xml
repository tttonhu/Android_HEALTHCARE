<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="409dp"
                android:layout_height="196dp"
                android:background="@drawable/custom_infor"
                android:fontFamily="@font/itim"
                android:paddingVertical="@dimen/distance_lv3"
                android:text="BMR"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/distance_lv5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv1"
                android:background="@drawable/boder"
                android:backgroundTint="@color/lv4"
                android:elevation="@dimen/distance_lv1"
                android:paddingBottom="@dimen/distance_lv2"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="85dp">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/distance_lv1"
                    android:fontFamily="@font/itim"
                    android:text="Your activity in week"
                    android:textAlignment="center"
                    android:textColor="@color/lv1"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtIPLayout_min_inf1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/distance_lv1"
                    android:layout_marginVertical="@dimen/distance_lv2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView45">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtIPEdit_min_inf1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder"
                        android:backgroundTint="@color/lv5"
                        android:fontFamily="@font/itim"
                        android:hint="min/day"
                        android:inputType="number"
                        android:lines="1"
                        android:textColor="@color/lv1"
                        android:textSize="@dimen/text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtIPLayout_days_inf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/distance_lv1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_min_inf1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtEdit_days_if1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder"
                        android:backgroundTint="@color/lv5"
                        android:fontFamily="@font/itim"
                        android:hint="days/week"
                        android:inputType="number"
                        android:lines="1"
                        android:textColor="@color/lv1"
                        android:textSize="@dimen/text_size" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                android:id="@+id/img_btn_male"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="@dimen/distance_lv12"
                android:layout_marginVertical="@dimen/distance_lv3"
                android:background="@drawable/boder"
                android:elevation="@dimen/distance_lv1"
                android:backgroundTint="@color/lv5"
                android:src="@drawable/male"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout19" />

            <ImageButton
                android:id="@+id/img_btn_female"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="@dimen/distance_lv12"
                android:layout_marginVertical="@dimen/distance_lv3"
                android:background="@drawable/boder"
                android:elevation="@dimen/distance_lv1"
                android:backgroundTint="@color/lv5"
                android:src="@drawable/female"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout19" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv2"
                android:layout_marginVertical="@dimen/distance_lv5"
                android:fontFamily="@font/itim"
                android:text="Height"
                android:textColor="@color/lv1"
                android:textSize="@dimen/title_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_btn_male" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtIPLayout_height_inf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv2"
                android:layout_marginVertical="@dimen/distance_lv1"
                android:layout_marginStart="@dimen/distance_lv12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView48"
                app:layout_constraintTop_toBottomOf="@+id/img_btn_male">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_IPEdit_height_if1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_lv7"
                    android:layout_marginHorizontal="@dimen/distance_lv1"
                    android:fontFamily="@font/itim"
                    android:layout_marginEnd="@dimen/distance_lv1"

                    android:hint="cm"
                    android:background="@drawable/boder"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/lv1"
                    android:lines="1"
                    android:inputType="number"
                    android:textSize="@dimen/text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv2"
                android:layout_marginVertical="@dimen/distance_lv5"
                android:fontFamily="@font/itim"
                android:text="Weight"
                android:textColor="@color/lv1"
                android:textSize="@dimen/title_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_height_inf1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtIPLayout_weight_if1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv2"
                android:layout_marginVertical="@dimen/distance_lv2"
                android:layout_marginStart="@dimen/distance_lv12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.966"
                app:layout_constraintStart_toEndOf="@+id/textView48"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_height_inf1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_IPEdit_weight_if1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_lv7"
                    android:fontFamily="@font/itim"
                    android:hint="kg"
                    android:lines="1"
                    android:background="@drawable/boder"
                    android:backgroundTint="@color/green"
                    android:layout_marginEnd="@dimen/distance_lv1"
                    android:textColor="@color/lv1"
                    android:inputType="number"
                    android:textSize="@dimen/text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv2"
                android:layout_marginVertical="@dimen/distance_lv5"
                android:fontFamily="@font/itim"
                android:text="Age"
                android:textColor="@color/lv1"
                android:textSize="@dimen/title_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_weight_if1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtIPLayout_age_if1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv2"
                android:layout_marginStart="@dimen/distance_lv12"
                android:layout_marginVertical="@dimen/distance_lv2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView50"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_weight_if1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtIPEdit_age_inf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_lv7"
                    android:fontFamily="@font/itim"
                    android:backgroundTint="@color/green"
                    android:layout_marginEnd="@dimen/distance_lv1"
                    android:hint="Enter your age!"
                    android:textColor="@color/lv1"
                    android:lines="1"
                    android:background="@drawable/boder"
                    android:inputType="number"
                    android:textSize="@dimen/text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/bnt_continue_inf1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/lv1"
                android:fontFamily="@font/architects_daughter"
                android:text="Continue"
                android:textSize="@dimen/text_size"
                android:elevation="@dimen/distance_lv1"
                android:textColor="@color/lv5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_age_if1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
