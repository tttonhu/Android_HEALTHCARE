                    android:textSize="@dimen/distance_lv5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
