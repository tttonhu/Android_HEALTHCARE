<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lv2">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/distance_lv1"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/itim"
            android:text="Hi ! Creat a new account!"
            android:textColor="@color/lv5"
            android:textSize="@dimen/text_size"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="16dp"
            android:src="@drawable/organic1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/distance_lv1"
            android:src="@drawable/cycling"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_signup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/distance_LR"
            android:layout_marginVertical="@dimen/distance_lv4"
            android:background="@drawable/boder"
            android:backgroundTint="@color/white"
            android:paddingVertical="@dimen/distance_lv1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteX="24dp">


            <TextView
                android:id="@+id/tv_signin_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:fontFamily="@font/itim"
                android:text="User name"
                android:textColor="@color/lv1"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtIPLayout_fullname_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_small2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_signin_fullname">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtIPEdit_fullname_signIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_lv8"
                    android:layout_marginEnd="@dimen/distance_lv8"
                    android:background="@drawable/solid"
                    android:fontFamily="@font/itim"
                    android:inputType="text|textMultiLine"
                    android:lines="1"
                    android:paddingHorizontal="@dimen/distance_LR"
                    android:paddingVertical="@dimen/distance_small2"
                    android:textColor="@color/lv1"
                    android:textSize="@dimen/text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_fullname_signIn" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_sign_repassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="@dimen/distance_small2"
                android:fontFamily="@font/itim"
                android:text="Re Password"
                android:textColor="@color/lv1"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_password_signIn" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtIPLayout_repassword_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_small2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sign_repassword">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtIPEdit_repassword_signIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_lv8"
                    android:layout_marginTop="@dimen/distance_small2"
                    android:layout_marginEnd="@dimen/distance_lv8"
                    android:background="@drawable/solid"
                    android:fontFamily="@font/itim"
                    android:textSize="@dimen/text_size"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/distance_LR"
                    android:paddingVertical="@dimen/distance_small2"
                    android:textColor="@color/lv1" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_signin_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="@dimen/distance_small2"
                android:fontFamily="@font/itim"
                android:text="Password"
                android:textColor="@color/lv1"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_fullname_signIn" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtIPLayout_password_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_small2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_signin_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtIPEdit_password_signIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_lv8"
                    android:layout_marginTop="@dimen/distance_small2"
                    android:layout_marginEnd="@dimen/distance_lv8"
                    android:background="@drawable/solid"
                    android:fontFamily="@font/itim"
                    android:textSize="@dimen/text_size"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/distance_LR"
                    android:paddingVertical="@dimen/distance_small2"
                    android:textColor="@color/lv1" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/distance_lv5"
                android:layout_marginVertical="@dimen/distance_lv1"
                android:backgroundTint="@color/lv4"
                android:fontFamily="@font/itim"
                android:text="Sign Up"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_repassword_signIn" />

            <Button
                android:id="@+id/btn_gotosignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lv1"
                android:fontFamily="@font/itim"
                android:layout_marginVertical="@dimen/distance_lv1"
                android:layout_marginHorizontal="@dimen/distance_lv5"
                android:text="Log In"
                android:textSize="@dimen/text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIPLayout_repassword_signIn" />


            <!--        <Button-->
            <!--            android:id="@+id/btn_display"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="@dimen/distance_lv1"-->
            <!--            android:backgroundTint="@color/lv1"-->
            <!--            android:fontFamily="@font/architects_daughter"-->
            <!--            android:text="Display User"-->
            <!--            android:textSize="@dimen/text_size"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            app:layout_constraintStart_toStartOf="parent"-->
            <!--            app:layout_constraintTop_toBottomOf="@+id/btn_gotosignin" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>