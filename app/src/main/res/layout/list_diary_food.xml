<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/distance_lv2"
    android:layout_marginVertical="@dimen/distance_lv1"
    android:background="@drawable/border1">

    <TextView
        android:id="@+id/txt_ed_gam_ldf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/distance_lv2"
        android:layout_marginVertical="@dimen/distance_small1"
        android:fontFamily="@font/itim"
        android:text="100"
        android:textColor="@color/lv1"
        android:textSize="@dimen/text_smail_size2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ed_name_ldf" />

    <TextView
        android:id="@+id/txt_ed_name_ldf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_lv2"
        android:layout_marginTop="@dimen/distance_small2"
        android:fontFamily="@font/itim"
        android:text="Thit ga"
        android:textColor="@color/lv1"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_ed_kcal_ldf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/distance_lv2"
        android:layout_marginVertical="@dimen/distance_small1"
        android:fontFamily="@font/itim"
        android:text="150"
        android:textColor="@color/lv1"
        android:textSize="@dimen/text_smail_size2"
        app:layout_constraintStart_toEndOf="@+id/txt_ed_gam_ldf"
        app:layout_constraintTop_toBottomOf="@+id/txt_ed_name_ldf" />

    <TextView
        android:id="@+id/txt_meal_ldf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/distance_lv2"
        android:layout_marginVertical="@dimen/distance_small2"
        android:fontFamily="@font/itim"
        android:text="Meal"
        android:textColor="@color/red2"
        android:textSize="@dimen/text_smail_size2"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_ldf"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_amount_ldf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/distance_lv2"
        android:layout_marginVertical="@dimen/distance_small2"
        android:fontFamily="@font/itim"
        android:text="amount"
        android:textColor="@color/red2"
        android:textSize="@dimen/text_smail_size2"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_ldf"
        app:layout_constraintTop_toBottomOf="@+id/txt_meal_ldf" />


    <ImageButton
        android:id="@+id/btn_delete_ldf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="@dimen/distance_lv3"
        android:background="@color/white"
        android:src="@drawable/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>